<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:descendantFocusability="blocksDescendants" >

    <RelativeLayout
        android:id="@+id/lsn_layout_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <CheckBox
            android:id="@+id/chk_favorite"
            android:layout_toStartOf="@id/titleTextView"
            android:layout_toLeftOf="@id/titleTextView"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/txt_title_fav"
            android:layout_toRightOf="@id/chk_favorite"
            android:layout_toEndOf="@id/chk_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp" />

        <TextView
            android:id="@+id/txt_lessonUrl_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title_fav"
            android:padding="6dp" />

        <TextView
            android:id="@+id/txt_description_fav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_lessonUrl_fav"
            android:padding="6dp" />

        <ImageView
            android:id="@+id/imgbtn_favorite"
            android:tag="@string/off"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/txt_description_fav"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:background="@null"
            android:contentDescription="@string/favorites" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/lsn_layout_item"
        android:background="@color/divider" />

</RelativeLayout>